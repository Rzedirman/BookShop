@* \Views\Shared\_Layout.cshtml *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookShop.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for sticky footer */
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .footer {
            margin-top: auto;
            width: 100%;
            padding: 20px 0;
        }

        .content-wrapper {
            flex: 1 0 auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Content Management</h6></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">Manage Books</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Authors" asp-action="Index">Manage Authors</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Genres" asp-action="Index">Manage Genres</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Languages" asp-action="Index">Manage Languages</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">User & Sales Management</h6></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Users" asp-action="Index">Manage Users</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Orders" asp-action="Index">Manage Orders</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Reports">Reports</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("seller"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="sellerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Seller Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="sellerDropdown">
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Dashboard" asp-action="Account">My Account</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Book Management</h6></li>
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Books" asp-action="Index">My Books</a></li>
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Books" asp-action="Create">Add New Book</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Sales & Reports</h6></li>
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Sales" asp-action="Index">Sales Reports</a></li>
                                    <li><a class="dropdown-item" asp-area="Seller" asp-controller="Sales" asp-action="Orders">My Orders</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container content-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - BookShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
