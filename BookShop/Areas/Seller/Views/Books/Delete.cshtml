@* Areas/Seller/Views/Books/Delete.cshtml *@

@model BookShop.Models.Product

@{
    ViewData["Title"] = "Delete Book";
    bool hasOrders = (bool)ViewData["HasOrders"];
    bool inCarts = (bool)ViewData["InCarts"];
    bool canDelete = !hasOrders;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger">
            <i class="bi bi-exclamation-triangle"></i> Delete Book
        </h1>
        <div>
            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-info">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to My Books
            </a>
        </div>
    </div>

    @if (hasOrders)
    {
        <div class="alert alert-danger">
            <h4 class="alert-heading">
                <i class="bi bi-shield-x"></i> Cannot Delete This Book
            </h4>
            <p>This book cannot be deleted because it has been sold to customers. Deleting books with sales history would:</p>
            <ul>
                <li>Break customer order records</li>
                <li>Remove purchase history for customers</li>
                <li>Affect sales reports and statistics</li>
            </ul>
            <hr>
            <p class="mb-0">
                <strong>Alternative:</strong> If you want to stop selling this book, you can set the stock to 0 in the
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="alert-link">edit page</a> instead.
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this book?
            </h4>
            <p>This action will permanently remove:</p>
            <ul>
                <li>The book listing from your catalog</li>
                <li>All uploaded files (book file and cover image)</li>
                <li>Any items in customer shopping carts</li>
                <li>All book data and statistics</li>
            </ul>
            <hr>
            <p class="mb-0">
                <strong>This action cannot be undone!</strong>
                @if (inCarts)
                {
                    <br>

                    <strong>Note: This book is currently in customer shopping carts and will be removed.</strong>
                    
               }
            </p>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Book to Delete</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageName) && Model.ImageName != "noimage.png")
                            {
                                <img src="~/images/covers/@Model.ImageName" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 200px; width: 100%;">
                                    <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <h3>@Model.Title</h3>
                            <p class="text-muted mb-3">by @Model.Author.Name @Model.Author.LastName</p>

                            <dl class="row">
                                <dt class="col-sm-3">Book ID</dt>
                                <dd class="col-sm-9">#@Model.ProductId</dd>

                                <dt class="col-sm-3">Genre</dt>
                                <dd class="col-sm-9">@Model.Genre.GenreName</dd>

                                <dt class="col-sm-3">Language</dt>
                                <dd class="col-sm-9">@Model.Language.LanguageName</dd>

                                <dt class="col-sm-3">Price</dt>
                                <dd class="col-sm-9">$@Model.Price.ToString("0.00")</dd>

                                <dt class="col-sm-3">Publication Date</dt>
                                <dd class="col-sm-9">@Model.PublicationDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-3">Current Stock</dt>
                                <dd class="col-sm-9">@Model.InStock</dd>

                                <dt class="col-sm-3">Orders</dt>
                                <dd class="col-sm-9">
                                    @Model.Orders.Count
                                    @if (Model.Orders.Count > 0)
                                    {
                                        <span class="text-danger">(Cannot delete)</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">In Carts</dt>
                                <dd class="col-sm-9">
                                    @Model.Carts.Count
                                    @if (Model.Carts.Count > 0)
                                    {
                                        <span class="text-warning">(Will be removed)</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6>Description</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    @if (canDelete)
                    {
                        <hr>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="ProductId" />

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                <label class="form-check-label text-danger" for="confirmDelete">
                                    <strong>I understand that this action cannot be undone and will permanently delete this book and all associated data.</strong>
                                </label>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                    <i class="bi bi-trash"></i> Delete Book Permanently
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info">
                                    <i class="bi bi-eye"></i> View Details Instead
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <hr>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Book Instead
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to My Books
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Deletion Impact -->
            <div class="card border-danger">
                <div class="card-header bg-danger bg-opacity-10">
                    <h5 class="mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Deletion Impact
                    </h5>
                </div>
                <div class="card-body">
                    <h6>What will be deleted:</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check text-danger"></i> Book listing and information</li>
                        <li><i class="bi bi-check text-danger"></i> Book file (@(Model.FileName ?? "None"))</li>
                        <li><i class="bi bi-check text-danger"></i> Cover image (@(Model.ImageName != "noimage.png" ? "Custom" : "Default"))</li>
                        <li><i class="bi bi-check text-danger"></i> Cart items (@Model.Carts.Count)</li>
                        <li><i class="bi bi-check text-danger"></i> Favorite lists (if any)</li>
                    </ul>

                    <h6 class="mt-3">What will be preserved:</h6>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-shield-check text-success"></i> Author information (shared)</li>
                        <li><i class="bi bi-shield-check text-success"></i> Genre and language data (shared)</li>
                        @if (hasOrders)
                        {
                            <li><i class="bi bi-shield-check text-success"></i> Order history (@Model.Orders.Count orders)</li>
                        }
                    </ul>
                </div>
            </div>

            @if (Model.Orders.Any())
            {
                <!-- Sales History -->
                <div class="card mt-3 border-info">
                    <div class="card-header bg-info bg-opacity-10">
                        <h5 class="mb-0 text-info">
                            <i class="bi bi-graph-up"></i> Sales History
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-6">
                                    <h4 class="text-primary">@Model.Orders.Sum(o => o.Amount)</h4>
                                    <small class="text-muted">Units Sold</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-success">$@Model.Orders.Sum(o => o.TotalPrice).ToString("0.00")</h4>
                                    <small class="text-muted">Revenue</small>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <p class="small text-muted mb-0">
                            <i class="bi bi-info-circle"></i>
                            This valuable sales data will be preserved and cannot be deleted.
                        </p>
                    </div>
                </div>
            }

            <!-- Alternative Actions -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Alternative Actions</h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">Instead of deleting, consider:</p>
                    <ul class="small">
                        <li><strong>Set stock to 0</strong> - Hide from customers without deleting</li>
                        <li><strong>Update description</strong> - Mark as discontinued</li>
                        <li><strong>Adjust price</strong> - Try different pricing</li>
                        <li><strong>Update files</strong> - Replace with revised versions</li>
                    </ul>
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-sm btn-outline-primary w-100">
                        <i class="bi bi-pencil"></i> Edit Instead
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <script>
        $(document).ready(function () {
            // Enable/disable delete button based on confirmation
            $('#confirmDelete').change(function () {
                $('#deleteButton').prop('disabled', !this.checked);
            });

            // Add extra confirmation on form submit
            $('form').on('submit', function (e) {
                if (!confirm('This will permanently delete "@Model.Title" and cannot be undone. Are you absolutely sure?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}