@* Areas/Seller/Views/Sales/Index.cshtml *@

@model BookShop.ViewModels.SellerSalesOverviewViewModel
@{
    ViewData["Title"] = "Sales Analytics";
    var growthIcon = Model.SalesGrowthPercentage >= 0 ? "bi-arrow-up" : "bi-arrow-down";
    var growthColor = Model.SalesGrowthPercentage >= 0 ? "text-success" : "text-danger";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-graph-up"></i> Sales Analytics
        </h1>
        <div>
            @* <a asp-action="Reports" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-bar-graph"></i> Generate Reports
            </a> *@
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Key Performance Indicators -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin h2 mb-2"></i>
                    <h5 class="card-title">Total Earnings</h5>
                    <p class="card-text display-6">$@Model.TotalEarnings.ToString("N2")</p>
                    <small>All time revenue</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-primary bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="bi bi-book h2 mb-2"></i>
                    <h5 class="card-title">Books Sold</h5>
                    <p class="card-text display-6">@Model.TotalBooksSold</p>
                    <small>Total units</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info bg-gradient text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people h2 mb-2"></i>
                    <h5 class="card-title">Customers</h5>
                    <p class="card-text display-6">@Model.UniqueCustomers</p>
                    <small>Unique buyers</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning bg-gradient text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-receipt h2 mb-2"></i>
                    <h5 class="card-title">Avg. Order Value</h5>
                    <p class="card-text display-6">$@Model.AverageOrderValue.ToString("N2")</p>
                    <small>Per transaction</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Growth Metrics -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up-arrow"></i> Monthly Growth
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-muted">This Month</h6>
                            <h4 class="text-success">$@Model.ThisMonthSales.ToString("N2")</h4>
                        </div>
                        <div class="col-6">
                            <h6 class="text-muted">Last Month</h6>
                            <h4>$@Model.LastMonthSales.ToString("N2")</h4>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="@growthColor">
                            <i class="bi @growthIcon"></i>
                            @Math.Abs(Model.SalesGrowthPercentage).ToString("F1")%
                        </span>
                        @if (Model.SalesGrowthPercentage >= 0)
                        {
                            <span class="text-muted">growth from last month</span>
                        }
                        else
                        {
                            <span class="text-muted">decrease from last month</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar3"></i> Monthly Sales Trend
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.MonthlySalesData?.Any() == true)
                    {
                        <canvas id="monthlySalesChart" height="100"></canvas>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-info-circle h1 text-muted"></i>
                            <p class="text-muted">No sales data available yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling Books and Recent Orders -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-trophy"></i> Top Selling Books
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.TopSellingBooks?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var book in Model.TopSellingBooks)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@book.Title</h6>
                                            <small class="text-muted">@book.SalesCount units sold</small>
                                        </div>
                                        <span class="badge bg-success rounded-pill">
                                            $@book.TotalAmount.ToString("N0")
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-book h1 text-muted"></i>
                            <p class="text-muted">No book sales yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Recent Orders
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var order in Model.RecentOrders)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">@order.Product.Title</h6>
                                            <small class="text-muted">
                                                by @order.User.Name @order.User.LastName •
                                                @order.OrderDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">
                                            $@order.TotalPrice.ToString("N2")
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-action="Orders" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-right"></i> View All Orders
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-cart h1 text-muted"></i>
                            <p class="text-muted">No orders yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a asp-area="Seller" asp-controller="Books" asp-action="Create" class="btn btn-success w-100">
                                <i class="bi bi-plus-circle"></i> Add New Book
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-area="Seller" asp-controller="Books" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul"></i> Manage Books
                            </a>
                        </div>
                        @* <div class="col-md-3">
                            <a asp-action="Reports" class="btn btn-outline-info w-100">
                                <i class="bi bi-file-earmark-bar-graph"></i> Detailed Reports
                            </a>
                        </div> *@
                        <div class="col-md-4">
                            <a asp-action="Orders" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-receipt"></i> Order History
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js for monthly sales chart -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

    @if (Model.MonthlySalesData?.Any() == true)
    {
        <script>
            // Monthly Sales Chart
            const monthlySalesCtx = document.getElementById('monthlySalesChart').getContext('2d');
            const monthlySalesChart = new Chart(monthlySalesCtx, {
                type: 'line',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.MonthlySalesData.Select(m => $"'{m.MonthName} {m.Year}'")))],
                    datasets: [{
                        label: 'Monthly Earnings',
                        data: [@Html.Raw(string.Join(",", Model.MonthlySalesData.Select(m => m.TotalEarnings.ToString("F2"))))],
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        </script>
    }
}