@* Areas/Admin/Views/Products/Delete.cshtml *@

@model BookShop.Models.Product

@{
    ViewData["Title"] = "Delete Book";
    bool hasOrders = (bool)ViewData["HasOrders"];
    bool inCarts = (bool)ViewData["InCarts"];
    bool canDelete = !hasOrders;
}

<div class="container">
    <h1 class="mb-4">Delete Book</h1>

    @if (hasOrders)
    {
        <div class="alert alert-danger">
            <h4>This book cannot be deleted</h4>
            <p>This book has associated orders. To maintain order history integrity, books with orders cannot be deleted.</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this book?</h4>
            <p>This action cannot be undone. All associated files and data will be permanently removed.</p>
            @if (inCarts)
            {
                <p class="mb-0"><strong>Note:</strong> This book is currently in one or more user shopping carts. These cart items will be removed if you proceed.</p>
            }
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Book Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.ImageName))
                            {
                                <img src="~/images/covers/@Model.ImageName" alt="@Model.Title" class="img-fluid rounded" style="max-height: 200px;">
                            }
                            else
                            {
                                <img src="~/images/covers/noimage.png" alt="No Image" class="img-fluid rounded" style="max-height: 200px;">
                            }
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Title</h4>
                            <p class="text-muted">By @Model.Author.Name @Model.Author.LastName</p>

                            <dl class="row">
                                <dt class="col-sm-4">Genre</dt>
                                <dd class="col-sm-8">@Model.Genre.GenreName</dd>

                                <dt class="col-sm-4">Language</dt>
                                <dd class="col-sm-8">@Model.Language.LanguageName</dd>

                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">$@Model.Price.ToString("0.00")</dd>

                                <dt class="col-sm-4">Publication Date</dt>
                                <dd class="col-sm-8">@Model.PublicationDate.ToShortDateString()</dd>

                                <dt class="col-sm-4">In Stock</dt>
                                <dd class="col-sm-8">
                                    @Model.InStock
                                </dd>

                                <dt class="col-sm-4">Orders</dt>
                                <dd class="col-sm-8">@Model.Orders.Count</dd>

                                <dt class="col-sm-4">In Carts</dt>
                                <dd class="col-sm-8">@Model.Carts.Count</dd>

                                @if (Model.Seller != null)
                                {
                                    <dt class="col-sm-4">Seller</dt>
                                    <dd class="col-sm-8">@Model.Seller.Name @Model.Seller.LastName (@Model.Seller.Email)</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="btn-group" role="group">
                            @if (canDelete)
                            {
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info">Back to Details</a>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (Model.Orders.Any())
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Associated Orders</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>User</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate).Take(5))
                                    {
                                        <tr>
                                            <td>@order.OrderId</td>
                                            <td>@order.User.Email</td>
                                            <td>@order.OrderDate.ToShortDateString()</td>
                                        </tr>
                                    }
                                    @if (Model.Orders.Count > 5)
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center">
                                                <small class="text-muted">Showing 5 of @Model.Orders.Count orders</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>