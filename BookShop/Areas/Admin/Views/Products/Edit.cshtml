@* Areas/Admin/Views/Products/Edit.cshtml *@

@model BookShop.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container">
    <h1 class="mb-4">Edit Book</h1>

    <form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data" id="editBookForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageName" />
        <input type="hidden" asp-for="FilePath" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Book Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="AuthorId" class="form-label">Author</label>
                                <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId">
                                    <option value="">-- Select Author --</option>
                                </select>
                                <span asp-validation-for="AuthorId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="GenreId" class="form-label">Genre</label>
                                <select asp-for="GenreId" class="form-select" asp-items="ViewBag.GenreId">
                                    <option value="">-- Select Genre --</option>
                                </select>
                                <span asp-validation-for="GenreId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="LanguageId" class="form-label">Language</label>
                                <select asp-for="LanguageId" class="form-select" asp-items="ViewBag.LanguageId">
                                    <option value="">-- Select Language --</option>
                                </select>
                                <span asp-validation-for="LanguageId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Price ($)</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PublicationDate" class="form-label">Publication Date</label>
                                <input asp-for="PublicationDate" class="form-control" type="date" />
                                <span asp-validation-for="PublicationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <label asp-for="InStock" class="form-label">Available in Stock</label>
                                <input asp-for="InStock" class="form-control" type="number" step="1" min="0" />
                                <span asp-validation-for="InStock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Files & Assignment</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Current Cover Image</label>
                            <div class="text-center mb-2">
                                @if (!string.IsNullOrEmpty(Model.ImageName))
                                {
                                    <img src="~/images/covers/@Model.ImageName" class="img-thumbnail" style="max-height: 150px;" alt="Book Cover" />
                                }
                                else
                                {
                                    <img src="~/images/covers/noimage.png" class="img-thumbnail" style="max-height: 150px;" alt="No Image" />
                                }
                            </div>
                            <label asp-for="CoverImage" class="form-label">New Cover Image (Optional)</label>
                            <input asp-for="CoverImage" type="file" class="form-control optional-field" accept="image/*" data-val="false" />
                            <small class="form-text text-muted">Leave empty to keep current image.</small>
                            @* <span asp-validation-for="CoverImage" class="text-danger"></span> *@
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Book File</label>
                            <div class="mb-2">
                                @if (!string.IsNullOrEmpty(Model.FilePath))
                                {
                                    <span class="badge bg-success">File uploaded: @Model.FilePath</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">No file uploaded</span>
                                }
                            </div>
                            <label asp-for="BookFile" class="form-label">New Book File (Optional)</label>
                            <input asp-for="BookFile" type="file" class="form-control optional-field" accept=".pdf,.epub,.mobi" data-val="false" />
                            <small class="form-text text-muted">Leave empty to keep current file.</small>
                            @* <span asp-validation-for="BookFile" class="text-danger"></span> *@
                        </div>

                        <div class="mb-3">
                            <label asp-for="SellerId" class="form-label">Assign to Seller (Optional)</label>
                            <select asp-for="SellerId" class="form-select optional-field" asp-items="ViewBag.SellerId" data-val="false">
                                <option value="">-- None --</option>
                            </select>
                            <small class="form-text text-muted">If no seller is assigned, the book will be managed by administrators.</small>
                            @* <span asp-validation-for="SellerId" class="text-danger"></span> *@
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary" id="saveChangesBtn">Save Changes</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Back to Details</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Completely bypass ASP.NET validation for optional fields
            // By removing the data-val attributes that trigger validation
            $('input[name="CoverImage"]').removeAttr('data-val');
            $('input[name="CoverImage"]').removeAttr('data-val-required');

            $('input[name="BookFile"]').removeAttr('data-val');
            $('input[name="BookFile"]').removeAttr('data-val-required');

            $('select[name="SellerId"]').removeAttr('data-val');
            $('select[name="SellerId"]').removeAttr('data-val-required');

            // Add an alternative submit handler that bypasses validation for these fields
            $('#saveChangesBtn').on('click', function (e) {
                // Remove any validation messages that might exist
                $('.field-validation-error').each(function () {
                    var field = $(this).attr('data-valmsg-for');
                    if (field === 'CoverImage' || field === 'BookFile' || field === 'SellerId') {
                        $(this).empty();
                    }
                });

                // Submit the form directly
                $('#editBookForm').submit();
            });
        });
    </script>
}