@* \Areas\Admin\Views\Dashboard\Orders.cshtml - Redirect to dedicated Orders management *@

@{
    ViewData["Title"] = "Redirecting to Order Management";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-arrow-right-circle text-primary" style="font-size: 3rem;"></i>
                    <h3 class="mt-3">Redirecting to Order Management</h3>
                    <p class="text-muted">
                        The order management functionality has been moved to a dedicated section with enhanced features including advanced filtering, sorting, and search capabilities.
                    </p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-cart-check"></i>
                        Go to Order Management
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Auto-redirect after 3 seconds -->
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Orders", new { area = "Admin" })';
        }, 3000);
    </script>
}