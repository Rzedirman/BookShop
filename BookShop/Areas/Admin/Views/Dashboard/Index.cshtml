@* \Areas\Admin\Views\Dashboard\Index.cshtml *@

@model BookShop.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-4">@Model.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Books</h5>
                    <p class="card-text display-4">@Model.TotalBooks</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text display-4">@Model.TotalOrders</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="card-text display-4">$@Model.TotalSales</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders and Top Selling Books -->
    <div class="row">
        <!-- Recent Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Orders</h5>
                    <a asp-action="Orders" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>User</th>
                                <th>Book</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.User.Email</td>
                                    <td>@order.Product.Title</td>
                                    <td>@order.OrderDate.ToShortDateString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Top Selling Books -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Top Selling Books</h5>
                    <a asp-action="Books" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Sales</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model.TopSellingBooks)
                            {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.SalesCount</td>
                                    <td>$@book.TotalAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Quick Links -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-people"></i><br>
                                Users
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-book"></i><br>
                                Books
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-controller="Authors" asp-action="Index" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-pen"></i><br>
                                Authors
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-controller="Genres" asp-action="Index" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-tags"></i><br>
                                Genres
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-controller="Languages" asp-action="Index" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-translate"></i><br>
                                Languages
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-action="Reports" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-graph-up"></i><br>
                                Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons for the quick links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}