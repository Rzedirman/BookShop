@* \Areas\Admin\Views\Dashboard\Index.cshtml *@

@model BookShop.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-4">@Model.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Books</h5>
                    <p class="card-text display-4">@Model.TotalBooks</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text display-4">@Model.TotalOrders</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="card-text display-4">$@Model.TotalSales</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders and Top Selling Books -->
    <div class="row">
        <!-- Recent Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Orders</h5>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">View All Orders</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>User</th>
                                        <th>Book</th>
                                        <th>Total</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId">
                                                    #@order.OrderId
                                                </a>
                                            </td>
                                            <td>
                                                <div>
                                                    <small>@order.User.Email</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                                    @order.Product.Title
                                                </div>
                                            </td>
                                            <td>$@order.TotalPrice.ToString("0.00")</td>
                                            <td>@order.OrderDate.ToString("MM/dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent orders found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Selling Books -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Top Selling Books</h5>
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-primary">View All Books</a>
                </div>
                <div class="card-body">
                    @if (Model.TopSellingBooks != null && Model.TopSellingBooks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Sales</th>
                                        <th>Revenue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.TopSellingBooks)
                                    {
                                        <tr>
                                            <td>
                                                <div style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                                    <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@book.ProductId">
                                                        @book.Title
                                                    </a>
                                                </div>
                                            </td>
                                            <td>@book.SalesCount</td>
                                            <td>$@book.TotalAmount.ToString("0.00")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No sales data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Quick Links -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-people"></i><br>
                                Users
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-book"></i><br>
                                Books
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-cart-check"></i><br>
                                Orders
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Authors" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-pen"></i><br>
                                Authors
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Genres" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-tags"></i><br>
                                Genres
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin" asp-controller="Languages" asp-action="Index" class="btn btn-outline-primary mb-3 w-100">
                                <i class="bi bi-translate"></i><br>
                                Languages
                            </a>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-4 offset-md-4">
                            <a asp-action="Reports" class="btn btn-outline-success mb-3 w-100">
                                <i class="bi bi-graph-up"></i><br>
                                Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons for the quick links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}