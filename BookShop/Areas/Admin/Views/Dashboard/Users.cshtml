@* \Areas\Admin\Views\Dashboard\Users.cshtml *@

@model IEnumerable<BookShop.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container">
    <h1 class="mb-4">User Management</h1>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Name @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Role.RoleName</td>
                                <td>@user.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>