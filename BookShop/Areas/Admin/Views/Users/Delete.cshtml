@* \Areas\Admin\Views\Users\Delete.cshtml *@

@model BookShop.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container">
    <h1 class="mb-4">Delete User</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this user?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">User ID</dt>
                        <dd class="col-sm-9">@Model.UserId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name @Model.LastName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@(Model.Phone ?? "Not provided")</dd>

                        <dt class="col-sm-3">Birth Date</dt>
                        <dd class="col-sm-9">@Model.BirthDate.ToShortDateString()</dd>

                        <dt class="col-sm-3">Role</dt>
                        <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Role.RoleName</span></dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("g")</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="UserId" />
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>