@* Areas/Admin/Views/Orders/Details.cshtml *@

@model BookShop.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container">
    <h1 class="mb-4">Order Details</h1>

    <div class="row">
        <!-- Order Information -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Order #@Model.OrderId</h5>
                    <div>
                        <a asp-action="Index" class="btn btn-sm btn-secondary">Back to Orders</a>
                        <a asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-sm btn-danger">Delete Order</a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Order ID</dt>
                        <dd class="col-sm-9">#@Model.OrderId</dd>

                        <dt class="col-sm-3">Order Date</dt>
                        <dd class="col-sm-9">@Model.OrderDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</dd>

                        <dt class="col-sm-3">Quantity</dt>
                        <dd class="col-sm-9">@Model.Amount</dd>

                        <dt class="col-sm-3">Total Price</dt>
                        <dd class="col-sm-9">
                            <strong class="text-success">$@Model.TotalPrice.ToString("0.00")</strong>
                        </dd>

                        <dt class="col-sm-3">Delivery Address</dt>
                        <dd class="col-sm-9">@Model.DeliveryAddress</dd>
                    </dl>
                </div>
            </div>

            <!-- Product Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.Product.ImageName) && Model.Product.ImageName != "noimage.png")
                            {
                                <img src="~/images/covers/@Model.Product.ImageName" alt="@Model.Product.Title" class="img-fluid rounded mb-2" style="max-height: 150px;">
                            }
                            else
                            {
                                <img src="~/images/covers/noimage.png" alt="No Image" class="img-fluid rounded mb-2" style="max-height: 150px;">
                            }
                        </div>
                        <div class="col-md-9">
                            <h4>@Model.Product.Title</h4>
                            <p class="text-muted mb-3">
                                by <a asp-area="Admin" asp-controller="Authors" asp-action="Details" asp-route-id="@Model.Product.AuthorId">
                                    @Model.Product.Author.Name @Model.Product.Author.LastName
                                </a>
                            </p>

                            <dl class="row">
                                <dt class="col-sm-3">Product ID</dt>
                                <dd class="col-sm-9">
                                    <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Product.ProductId">
                                        #@Model.Product.ProductId
                                    </a>
                                </dd>

                                <dt class="col-sm-3">Genre</dt>
                                <dd class="col-sm-9">
                                    <a asp-area="Admin" asp-controller="Genres" asp-action="Details" asp-route-id="@Model.Product.GenreId">
                                        @Model.Product.Genre.GenreName
                                    </a>
                                </dd>

                                <dt class="col-sm-3">Language</dt>
                                <dd class="col-sm-9">
                                    <a asp-area="Admin" asp-controller="Languages" asp-action="Details" asp-route-id="@Model.Product.LanguageId">
                                        @Model.Product.Language.LanguageName
                                    </a>
                                </dd>

                                <dt class="col-sm-3">Unit Price</dt>
                                <dd class="col-sm-9">$@Model.Product.Price.ToString("0.00")</dd>

                                <dt class="col-sm-3">Publication Date</dt>
                                <dd class="col-sm-9">@Model.Product.PublicationDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-3">Stock Available</dt>
                                <dd class="col-sm-9">@Model.Product.InStock</dd>
                            </dl>

                            @if (!string.IsNullOrEmpty(Model.Product.Description))
                            {
                                <div class="mt-3">
                                    <strong>Description:</strong>
                                    <p class="mt-2">@Model.Product.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Information -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <span class="h4 mb-0">@Model.User.Name.Substring(0, 1)@Model.User.LastName.Substring(0, 1)</span>
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">User ID</dt>
                        <dd class="col-sm-8">
                            <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.User.UserId">
                                #@Model.User.UserId
                            </a>
                        </dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.User.Name @Model.User.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">
                            <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                        </dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.User.Phone))
                            {
                                <a href="tel:@Model.User.Phone">@Model.User.Phone</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.User.Role.RoleName</span>
                        </dd>

                        <dt class="col-sm-4">Member Since</dt>
                        <dd class="col-sm-8">@Model.User.CreatedDate.ToString("MMMM yyyy")</dd>

                        <dt class="col-sm-4">Balance</dt>
                        <dd class="col-sm-8">$@Model.User.Balance.ToString("0.00")</dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.User.UserId" class="btn btn-sm btn-outline-primary w-100">
                            View Customer Profile
                        </a>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span>Unit Price:</span>
                        <span>$@Model.Product.Price.ToString("0.00")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Quantity:</span>
                        <span>@Model.Amount</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong class="text-success">$@Model.TotalPrice.ToString("0.00")</strong>
                    </div>

                    @{
                        var calculatedTotal = Model.Product.Price * Model.Amount;
                        if (calculatedTotal != Model.TotalPrice)
                        {
                            <div class="mt-2">
                                <small class="text-warning">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Price discrepancy detected
                                </small>
                                <div class="small text-muted">
                                    Expected: $@calculatedTotal.ToString("0.00")<br>
                                    Actual: $@Model.TotalPrice.ToString("0.00")
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}