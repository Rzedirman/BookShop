@* Areas/Admin/Views/Orders/Index.cshtml *@

@model BookShop.Helpers.PaginatedList<BookShop.Models.Order>
@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid">
    <h1 class="mb-4">Order Management</h1>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filters & Search</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row">
                    <!-- Search -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" 
                               placeholder="Order ID, User, Product, Address..." />
                    </div>

                    <!-- Date Range -->
                    <div class="col-md-2 mb-3">
                        <label class="form-label">From Date</label>
                        <input type="date" name="StartDate" value="@ViewData["StartDate"]" class="form-control" />
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">To Date</label>
                        <input type="date" name="EndDate" value="@ViewData["EndDate"]" class="form-control" />
                    </div>

                    <!-- Price Range -->
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Min Price ($)</label>
                        <input type="number" name="MinPrice" value="@ViewData["MinPrice"]" class="form-control" step="0.01" min="0" />
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Max Price ($)</label>
                        <input type="number" name="MaxPrice" value="@ViewData["MaxPrice"]" class="form-control" step="0.01" min="0" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["OrderIdSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    Order ID
                                    @if (string.IsNullOrEmpty((string)ViewData["CurrentSort"]))
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "orderid_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["UserSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    User
                                    @if ((string)ViewData["CurrentSort"] == "user")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "user_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["ProductSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    Product
                                    @if ((string)ViewData["CurrentSort"] == "product")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "product_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["AmountSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    Quantity
                                    @if ((string)ViewData["CurrentSort"] == "amount")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "amount_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["PriceSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    Total Price
                                    @if ((string)ViewData["CurrentSort"] == "price")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "price_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" 
                                   asp-route-sortOrder="@ViewData["DateSortParam"]" 
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-startDate="@ViewData["StartDate"]"
                                   asp-route-endDate="@ViewData["EndDate"]"
                                   asp-route-minPrice="@ViewData["MinPrice"]"
                                   asp-route-maxPrice="@ViewData["MaxPrice"]">
                                    Order Date
                                    @if ((string)ViewData["CurrentSort"] == "date")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                    else if ((string)ViewData["CurrentSort"] == "date_desc")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                </a>
                            </th>
                            <th>Delivery Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <strong>#@order.OrderId</strong>
                                </td>
                                <td>
                                    <div>
                                        <strong>@order.User.Name @order.User.LastName</strong><br>
                                        <small class="text-muted">@order.User.Email</small>
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 200px;">
                                        <strong>@order.Product.Title</strong><br>
                                        <small class="text-muted">by @order.Product.Author.Name @order.Product.Author.LastName</small>
                                    </div>
                                </td>
                                <td>@order.Amount</td>
                                <td>$@order.TotalPrice.ToString("0.00")</td>
                                <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <div style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @order.DeliveryAddress
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-startDate="@ViewData["StartDate"]"
                           asp-route-endDate="@ViewData["EndDate"]"
                           asp-route-minPrice="@ViewData["MinPrice"]"
                           asp-route-maxPrice="@ViewData["MaxPrice"]"
                           class="page-link">
                            Previous
                        </a>
                    </li>

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@i"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-startDate="@ViewData["StartDate"]"
                               asp-route-endDate="@ViewData["EndDate"]"
                               asp-route-minPrice="@ViewData["MinPrice"]"
                               asp-route-maxPrice="@ViewData["MaxPrice"]"
                               class="page-link">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @nextDisabled">
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-startDate="@ViewData["StartDate"]"
                           asp-route-endDate="@ViewData["EndDate"]"
                           asp-route-minPrice="@ViewData["MinPrice"]"
                           asp-route-maxPrice="@ViewData["MaxPrice"]"
                           class="page-link">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons for sorting indicators -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}