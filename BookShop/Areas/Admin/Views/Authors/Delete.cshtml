@* Areas/Admin/Views/Authors/Delete.cshtml *@

@model BookShop.Models.Author

@{
    ViewData["Title"] = "Delete Author";
    bool authorHasBooks = (bool)ViewData["AuthorHasBooks"];
}

<div class="container">
    <h1 class="mb-4">Delete Author</h1>

    @if (authorHasBooks)
    {
        <div class="alert alert-danger">
            <h4>This author cannot be deleted</h4>
            <p>This author has published books in the system. To delete this author, first delete or reassign all associated books.</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this author?</h4>
            <p>This action cannot be undone.</p>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Author Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.AuthorId</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name @Model.LastName</dd>

                        <dt class="col-sm-4">Country</dt>
                        <dd class="col-sm-8">@Model.Country</dd>

                        <dt class="col-sm-4">Birth Date</dt>
                        <dd class="col-sm-8">@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToShortDateString() : "Not specified")</dd>

                        <dt class="col-sm-4">Death Date</dt>
                        <dd class="col-sm-8">@(Model.DeathDate.HasValue ? Model.DeathDate.Value.ToShortDateString() : "N/A")</dd>

                        <dt class="col-sm-4">Number of Books</dt>
                        <dd class="col-sm-8">@Model.Products.Count</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AuthorId" />
                        <div class="btn-group" role="group">
                            @if (!authorHasBooks)
                            {
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Products.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Books by this Author</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Genre</th>
                                        <th>Language</th>
                                        <th>Price</th>
                                        <th>Published</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.Products)
                                    {
                                        <tr>
                                            <td>@book.ProductId</td>
                                            <td>@book.Title</td>
                                            <td>@book.Genre.GenreName</td>
                                            <td>@book.Language.LanguageName</td>
                                            <td>$@book.Price</td>
                                            <td>@book.PublicationDate.ToShortDateString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>